# Uncomment this line to define a global platform for your project
# platform :ios, '13.0'
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Fix for flutter_zoom_videosdk arm64 architecture exclusion
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      
      # Enable debug symbols
      config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'
      config.build_settings['GCC_GENERATE_DEBUGGING_SYMBOLS'] = 'YES'
    end
  end
  
  # Fix ZoomTask.framework missing Info.plist keys
  puts "ðŸ”§ Fixing ZoomTask.framework Info.plist files..."
  
  zoom_task_plists = [
    'Pods/ZoomVideoSDK/zoom-video-sdk-iOS/ZoomTask.xcframework/ios-arm64/ZoomTask.framework/Info.plist',
    'Pods/ZoomVideoSDK/zoom-video-sdk-iOS/ZoomTask.xcframework/ios-arm64_x86_64-simulator/ZoomTask.framework/Info.plist',
    'Pods/ZoomVideoSDK/zoom-video-sdk-iOS/ZoomTask.xcframework/xros-arm64/ZoomTask.framework/Info.plist',
    'Pods/ZoomVideoSDK/zoom-video-sdk-iOS/ZoomTask.xcframework/xros-arm64-simulator/ZoomTask.framework/Info.plist'
  ]
  
  zoom_task_plists.each do |plist_path|
    if File.exist?(plist_path)
      # Check and add CFBundleShortVersionString
      has_version = system("/usr/libexec/PlistBuddy -c 'Print :CFBundleShortVersionString' '#{plist_path}' &>/dev/null")
      unless has_version
        system("/usr/libexec/PlistBuddy -c 'Add :CFBundleShortVersionString string 2.4.0' '#{plist_path}'")
      end
      
      # Check and add CFBundleVersion
      has_build = system("/usr/libexec/PlistBuddy -c 'Print :CFBundleVersion' '#{plist_path}' &>/dev/null")
      unless has_build
        system("/usr/libexec/PlistBuddy -c 'Add :CFBundleVersion string 1' '#{plist_path}'")
      end
      
      puts "  âœ… Fixed: #{plist_path}"
    end
  end
end
